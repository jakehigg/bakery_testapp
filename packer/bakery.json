{
  "variables": {
    "aws_access_key": "{{env `aws_access_key`}}",
    "aws_secret_key": "{{env `aws_secret_key`}}",
    "source_ami": "{{env `source_ami`}}",
    "vpc_id": "{{env `vpc_id`}}",
    "subnet_id": "{{env `subnet_id`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "{{user `source_ami`}}",
    "vpc_id": "{{user `vpc_id`}}",
    "subnet_id": "{{user `subnet_id`}}",
    "associate_public_ip_address": "true",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "Ubuntu Base Image with TestApp {{timestamp}}",
    "tags": {
        "OS": "Linux",
        "Release": "Ubuntu16",
        "Role": "python",
	"Profile": "testapp",
        "Version": "Latest"
     }
  }],
    "provisioners": [
			{
			"type" : "file",
			"source" : "./files/environment",
			"destination" : "/tmp/environment"
		},

        {
            "type": "shell",
            "inline":[
                "wget https://apt.puppetlabs.com/puppetlabs-release-pc1-xenial.deb",
                "sudo dpkg -i puppetlabs-release-pc1-xenial.deb",
		"sudo apt-get update",
		"sudo apt-get install puppet-agent -y",
		"sudo mv /tmp/environment /etc/environment",
		"rm puppetlabs-release-pc1-xenial.deb",
		"sudo apt-get install python-pip -y",
		"sudo pip install flask",
		"sudo pip install flask-mysql",
                "git clone https://github.com/jakehigg/bakery_testapp.git",
                "sudo cp bakery_testapp/init/rc.local /etc/rc.local -f"
            ]
        }
    ]
}
